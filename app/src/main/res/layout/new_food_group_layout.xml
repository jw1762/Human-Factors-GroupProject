<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:src="@drawable/ic_minus"
            android:tint="@color/colorPrimaryDark"
            android:id="@+id/foodGroupMinusButton"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Food Group Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/foodGroupName"
            android:layout_weight=".4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabItemFrame"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/newItemOnClick"
        android:paddingBottom="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/ic_plus_button"/>
        <TextView
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="New Item"
            android:textSize="18sp"
            android:id="@+id/newItemTextView"/>

    </LinearLayout>

</LinearLayout>